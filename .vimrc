colo default
syntax on

set number
set mouse=a
set backspace=indent,eol,start

set noexpandtab
set tabstop=4
set shiftwidth=4
set smartindent
set smarttab

" ^^^^^^^^^^ most important settings
" vvvvvvvvvv pretty cool too

set wrap
set noerrorbells
set noswapfile
set noshowmode
set laststatus=2
set incsearch

set colorcolumn=80
highlight ColorColumn ctermbg=0 guibg=lightgrey
